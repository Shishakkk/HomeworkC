#include <iostream>
using namespace std;

double sredenee(int* arr, int size) {
	double b = 0;
	for (int i = 0; i < size;i++) {
		b = b + arr[i];
	}
	b = b / size;
	return b;
}



int main() {
	int size = 8;
	
	int* arr = new int[size];
	for (int i = 0;i < size;i++) {
		arr[i] = i + 1;
	}
	double d = sredenee(arr,size);
	cout << d;
}





